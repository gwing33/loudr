        window.loudrSettings = {
          email: '<%= email %>',
          api_key: "b10d6e77be8428d95bae34e1f6057b02c51df0925146fd2f79ba2a7a519917fa"
        };
      </script>
      <script>
        (function(){
          var w=window;
